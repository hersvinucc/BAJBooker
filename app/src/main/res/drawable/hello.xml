<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape without stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Bottom stroke shape -->
    <item
        android:bottom="1dp"
        android:right="-1dp"
        android:left="-1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/gray"
                android:width="1dp" />
        </shape>
    </item>
</layer-list>
