<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape without stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Bottom stroke shape -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#000"
                android:width="2dp" />
        </shape>
    </item>
</layer-list>
