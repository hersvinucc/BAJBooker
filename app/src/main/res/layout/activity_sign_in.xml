<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="362dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/arrow_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/bajLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:text="Create Account"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg_style"
            android:hint="First Name"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toEndOf="@id/formContainer"
            app:layout_constraintStart_toStartOf="@id/formContainer"
            app:layout_constraintTop_toTopOf="@id/formContainer" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:background="@drawable/input_bg_style"
            android:hint="Last Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="@id/firstName"
            app:layout_constraintEnd_toEndOf="@id/formContainer"
            app:layout_constraintStart_toStartOf="@id/formContainer" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/input_bg_style"
            android:hint="Username"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/formContainer" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/input_bg_style"
            android:layout_gravity="center_horizontal"
            android:hint="Email Address"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toEndOf="@id/formContainer"
            app:layout_constraintStart_toStartOf="@id/formContainer"
            app:layout_constraintTop_toTopOf="@id/lastName" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="270dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_bg_style"
            android:inputType="none"
            android:focusable="false"
            android:hint="Birth Date"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toEndOf="@id/formContainer"
            app:layout_constraintStart_toStartOf="@id/formContainer"
            app:layout_constraintTop_toTopOf="@id/emailAddress"
            android:onClick="showDatePickerDialog" />
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:calendarViewShown="false"
            android:layout_marginTop="220dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:datePickerMode="spinner"
            android:visibility="gone"
            />
<!--        <EditText-->
<!--            android:layout_width="350dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:background="@drawable/input_bg_style"-->
<!--            android:hint="Phone Number"-->
<!--            android:layout_marginTop="330dp"-->
<!--            android:paddingLeft="10dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            />-->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="330dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/input_bg_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="650dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:ccp_defaultNameCode="PH"/>

            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="192dp"
                android:layout_height="50dp"
                android:layout_marginBottom="650dp"
                android:hint="912 345 6789"
                android:inputType="number"
                android:maxLength="10"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nextButton"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="By Signing up, you agree to Our terms,  Privacy Policy, and Cookie Use. Book A Job Booker may use your contact information, including your email address and phone number for purposes outlined in our Privacy Policy. Learn More"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <CheckBox
            android:id="@+id/myCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Next"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:enabled="false"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       />



</androidx.constraintlayout.widget.ConstraintLayout>